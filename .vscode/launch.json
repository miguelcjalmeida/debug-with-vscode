{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "NodeJS - Launch",
            "type": "node",
            "request": "launch",
            "program": "${workspaceRoot}/nodejs/app.js",
            "stopOnEntry": false,
            "args": [],
            "cwd": "${workspaceRoot}",
            "preLaunchTask": null,
            "runtimeExecutable": null,
            "runtimeArgs": [
                "--nolazy"
            ],
            "env": {
                "NODE_ENV": "development"
            },
            "console": "externalTerminal",
            "sourceMaps": false,
            "outDir": null
        },
        {
            //should run nodejs app with the following command
            //node --debug-brk <file> / node --debug-br=5858 <file>
            "name": "NodeJS - Attach",
            "type": "node",
            "request": "attach",
            "port": 5858,
            "address": "localhost",
            "restart": false,
            "sourceMaps": false,
            "outDir": null,
            "localRoot": "${workspaceRoot}",
            "remoteRoot": null
        },
        {
             //chrome must be executed with --remote-debugging-port=9222
            "name": "Javascript - Attach without sourcemaps",
            "type": "chrome",
            "request": "attach",
            "port": 9222,
            "url": "http://localhost:3001/javascript/index.html",
            "webRoot": "${workspaceRoot}/",
            "sourceMaps": false
        },
        {
             //chrome must be executed with --remote-debugging-port=9222
            "name": "Javascript - Attach with sourcemaps",
            "type": "chrome",
            "request": "attach",
            "port": 9222,
            "url": "http://localhost:3001/javascript/dist/index.html",
            "webRoot": "${workspaceRoot}/javascript/dist/",
            "sourceMaps": true
        },
        {
             //chrome must be executed with --remote-debugging-port=9222
            "name": "Typescript - Attach with sourcemaps",
            "type": "chrome",
            "request": "attach",
            "port": 9222,
            "url": "http://localhost:3001/typescript/dist/index.html",
            "webRoot": "${workspaceRoot}/typescript/dist/",
            "sourceMaps": true,
            "preLaunchTask": "build-typescript"
        },
        {
            //must enable php xdebug extension
            "name": "PHP - Launch File",
            "type": "php",
            "request": "launch",
            "localSourceRoot": "${workspaceRoot}/php",
            "serverSourceRoot": "C:/dev/debug-with-vscode/php",
            "program": "${workspaceRoot}/php/index.php",
            "runtimeExecutable": "C:/xampp/php/php.exe"
        },
        {
            //must enable php xdebug extension
            "name": "PHP - Listen for XDebug",
            "type": "php",
            "request": "launch",
            "port": 9000
        }
    ]
}